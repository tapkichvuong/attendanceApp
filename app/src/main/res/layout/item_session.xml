<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/bg_item_course">

    <TextView
        android:id="@+id/subjectName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Mathematics"
        android:layout_marginStart="@dimen/_10sdp"
        android:gravity="start"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:fontFamily="@font/font_medium" />

    <TextView
        android:id="@+id/lessonName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subjectName"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Optimize vector"
        android:layout_marginStart="@dimen/_10sdp"
        android:gravity="start"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/font_medium" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_time_info"
        app:layout_constraintBottom_toBottomOf="@id/subjectName"
        app:layout_constraintTop_toTopOf="@id/subjectName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_10sdp"
        android:text="11:40 - 12:30"
        android:layout_marginStart="@dimen/_10sdp"
        android:gravity="start"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/font_medium" />

</androidx.constraintlayout.widget.ConstraintLayout>